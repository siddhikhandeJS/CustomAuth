@model CustomAuth.Entities.Department

<h2>Add Department</h2>
<form method="post" asp-action="AddDepartment" asp-controller="Department">
    <div class="form-group">
        <label for="DeptName">Department Name</label>
        <input type="text" class="form-control" id="DeptName" name="DeptName" value="@Model.DeptName" required />
    </div>
    <button type="submit" class="btn btn-success">Add Department</button>
    <a href="@Url.Action("GetAllDepartments", "Department")" class="btn btn-secondary">Cancel</a>
</form>
